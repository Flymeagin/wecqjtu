.main-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.main-container .kaoshi {
  width: 92%;
  height: 200rpx;
  border-radius: 8px;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 30rpx;
}

.main-container .kaoshi .top {
  font-size: 30rpx;
  color: black;
  text-align: center;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-family: 'FangSong';
}

.main-container .kaoshi .jiaoshi {
  font-size: 43rpx;
  text-align: center;
  color: red;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-family: 'Arial';
}

.main-container .kaoshi .time {
  font-size: 26rpx;
