page {
  width: 100%;
  height: 100%;
}

.login-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.banner {
  width: 100%;
  background-color: #1275c3;
  height: 110rpx;
  text-align: center;
}

.banner image {
  width: 284rpx;
  height: 100rpx;
}

.title {
  width: 92%;
  height: 250rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.title .tt {
  font-size: 42rpx;

}

.title .time {
  font-size: 30rpx;
  color: #666;
}
.content{
  width: 92%;
}
.content text{
  font-size: 30rpx;
}
.footer{
  width: 80%;
  text-align: center;
  height: 100rpx;
}
