page {
   background-color: #f2f2f2; 
}

.main-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
picker {
  width: 90%;
  margin-top: 40rpx;
}

.picker {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  background-color: white;
  border-radius: 5px;
}

.picker .title {
  width: 30%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 25rpx;
  border-right: 1px solid #dcdcdc;
}

.picker .content {
  width: 69%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: red;
  font-size: 35rpx;
}
.search{
  width: 90%;
  margin-top: 30rpx;
  font-size: 34rpx;
  height: 90rpx;
  background-color: #1AAD19;
  color: white;
  text-align: center;
  line-height: 90rpx;
  border-radius: 5px;
}

