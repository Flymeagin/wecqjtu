/* pages/love/love.wxss */

page {
  height: 100%;
}

.main-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 110rpx;
}

.main-container .header {
  position: fixed;
  top: 0rpx;
  width: 100%;
  height: 130rpx;
  text-align: center;
  background-color: #faa7b9;
  font-family: 'Arial';
  color: white;
}

.main-container .header image {
  height: 130rpx;
  width: 130rpx;
}

.main-container .content {
  width: 100%;
  display: flex;
  margin-top: 140rpx;
  flex-direction: column;
  align-items: center;
}

.main-container .content .showlove {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.showlove textarea {
  border-radius: 6px;
  width: 84%;
  margin-top: 50rpx;
  background-color: white;
  height: 300rpx;
  padding: 3%;
  font-size: 33rpx;
  border: 1px solid #dcdcdc;
}

.showlove .sex {
  width: 90%;
  text-align: left;
  height: 100rpx;
  margin-top: 35rpx;
  font-size: 33rpx;
  color: #666;
  border-bottom: 1px solid #dcdcdc;
}

.showlove button {
  background-color: #faa7b9;
  margin-top: 100rpx;
  width: 90%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  color:white;
}

.main-container .content .love {
  width: 94%;
  height: 320rpx;
  margin-top: 20rpx;
}

.main-container .content .love .top {
  width: 100%;
  height: 220rpx;
  border-top-left-radius: 4px;
  border-top-right-radius: 4px;
  /* background-color: #5b606a; */
}

.boy {
  background-color: #67baff;
}

.girl {
  background-color: #faa7b9;
}

.nm {
  background-color: #5b606a;
}

.main-container .content .love .top .title {
  width: 95%;
  color: white;
  font-size: 30rpx;
  margin: 0rpx auto;
  display: flex;
  flex-direction: column;
  height: 200rpx;
  justify-content: center;
}

.main-container .content .love .bottom {
  width: 100%;
  height: 100rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  box-shadow: 0px 0px 1px #666;
  border-bottom-left-radius: 4px;
  border-bottom-right-radius: 4px;
}

.main-container .content .love .bottom .tx {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.main-container .content .love .bottom .tx image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
}

.main-container .content .love .bottom .time {
  height: 100rpx;
  margin-left: 20rpx;
  color: #757982;
  font-size: 30rpx;
  line-height: 50rpx;
}

.main-container .footer {
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 100rpx;
  background-color: white;
  box-shadow: 0px 0px 3px #dcdcdc;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
}

.main-container .footer view {
  width: 25%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-radius: 4rpx;
  font-size: 34rpx;
}

.sel {
  background-color: #fff5f5;
  color: #faa7b9;
}
